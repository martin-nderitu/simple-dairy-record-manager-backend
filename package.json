{
  "name": "digital-mkulima-rest-api",
  "version": "1.0.0",
  "engines": {
    "node": "14.x"
  },
  "private": "true",
  "main": "dist/app.js",
  "type": "module",
  "author": "martin",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "preserve": "yarn run build",
    "serve": "concurrently \"tsc --watch\" \"nodemon ./dist/app.js\"",
    "prestart": "yarn run build",
    "start": "node dist/app.js",
    "pretest": "yarn run build && cross-env NODE_ENV=test node ./dist/seeders/index.js",
    "test": "cross-env NODE_ENV=test PORT=4000 node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --watchAll --detectOpenHandles"
  },
  "dependencies": {
    "argon2": "^0.28.2",
    "connect-session-sequelize": "^7.1.1",
    "cookie-parser": "^1.4.5",
    "date-fns": "^2.22.1",
    "debug": "^4.3.1",
    "dotenv": "^9.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.9.2",
    "helmet": "^4.6.0",
    "http-errors": "^1.8.0",
    "morgan": "^1.10.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "rimraf": "^3.0.2",
    "sequelize": "^6.6.2",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.0.2",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.1.3",
    "concurrently": "^6.1.0",
    "cross-env": "^7.0.3",
    "jest": "^27.0.6",
    "nodemon": "^2.0.7",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^9.1.1"
  }
}
